{
  "name": "test-rail-sync",
  "displayName": "TestRail Sync",
  "description": "TestRail Sync extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "get-suites",
        "title": "Get suites"
      },
      {
        "command": "get-test-cases",
        "title": "Get test cases"
      },
      {
        "command": "save-test-cases",
        "title": "Save test cases"
      },
      {
        "command": "delete-test-cases",
        "title": "Delete test cases"
      }
    ],
    "submenus": [
      {
        "id": "submenu",
        "label": "TestRail Sync"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "group": "test-rail-sync",
          "submenu": "submenu",
          "when": "editorLangId == typescript"
        }
      ],
      "submenu": [
        {
          "command": "get-suites"
        },
        {
          "command": "get-test-cases"
        },
        {
          "command": "save-test-cases"
        },
        {
          "command": "delete-test-cases"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "rm -rf dist && webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.5",
    "@mui/x-data-grid": "^7.22.1",
    "axios": "^1.7.7",
    "babel-loader": "^9.2.1",
    "http-proxy-middleware": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
